{
	"name": "swat-group-hackathon-2025-runtime-terror",
	"private": true,
	"scripts": {
		"lint": "biome lint --fix",
		"format": "biome format --write",
		"dev:api": "tsx watch src/api/server.ts",
		"dev:web": "vite --config src/web/vite.config.ts",
		"dev": "run-p dev:*",
		"build:api": "tsdown src/api/server.ts --format esm --out-dir dist/api --sourcemap --clean",
		"build:web": "vite build --config src/web/vite.config.ts",
		"build": "pnpm build:web && pnpm build:api",
		"start": "node dist/api/server.mjs",
		"prisma:generate": "prisma generate",
		"prisma:migrate:dev": "prisma migrate dev",
		"prisma:migrate:deploy": "prisma migrate deploy"
	},
	"packageManager": "pnpm@9.0.0",
	"dependencies": {
		"@fastify/cookie": "11.0.2",
		"@fastify/cors": "11.1.0",
		"@fastify/rate-limit": "10.3.0",
		"@fastify/static": "8.2.0",
		"@prisma/client": "6.12.0",
		"@tanstack/react-query": "5.85.5",
		"@trpc/client": "11.4.4",
		"@trpc/react-query": "11.5.0",
		"@trpc/server": "11.4.4",
		"dotenv": "17.2.1",
		"fastify": "5.4.0",
		"jose": "6.0.12",
		"react": "19.1.1",
		"react-custom-roulette": "1.4.1",
		"react-dom": "19.1.1",
		"react-icons": "5.5.0",
		"react-router-dom": "7.8.2",
		"resend": "6.0.1",
		"tsdown": "0.14.2",
		"zod": "4.0.17"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@types/react": "19.1.9",
		"@types/react-dom": "19.1.7",
		"@vitejs/plugin-react": "4.7.0",
		"npm-run-all": "4.1.5",
		"prisma": "6.12.0",
		"tsx": "4.20.3",
		"typescript": "5.9.2",
		"vite": "7.1.3"
	}
}